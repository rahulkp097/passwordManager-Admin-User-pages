<!-- accountView.ejs -->

<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">

  <title>Account Details</title>
</head>

<body>
  <style>
    body {
      background-color: rgb(171, 197, 197);
    }

    .container {
      background-color: rgb(123, 164, 164);
      padding: 20px;
      margin-top: 50px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .card {
      background-color: #fff;
      margin-top: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }
  </style>

  <div class="container text-center">
    <h1>Account Details of <%= user.name %></h1>
    <% if (account.length > 0) { %>
      <% account.forEach(account => { %>
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Website: <%= account.website %></h5>
            <p class="card-text">Email: <%= account.email %></p>
            <p class="card-text">Password: <%= account.password %></p>
           
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
              Delete Account
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Remove</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                  Are you sure you want to remove this user?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="window.location.href='/admin/view/delete/<%=account._id%>'">Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>No accounts found.</p>
    <% } %>
    <a class="btn btn-primary mt-4" href="/adminPage">Back to Admin Page</a>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
 
</body>

</html>
